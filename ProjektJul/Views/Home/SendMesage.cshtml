@model Projekt.Data.Models.Message

@{
    ViewData["Title"] = "Skicka meddelande";
}

<h2>Skicka meddelande</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="SendMessage" method="post">
    <input type="hidden" asp-for="ReceiverId" />

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="form-group mb-2">
            <label>Ditt namn</label>
            <input asp-for="SenderName" class="form-control" />
            <span asp-validation-for="SenderName" class="text-danger"></span>
        </div>
    }

    <div class="form-group mb-2">
        <label>Meddelande</label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Skicka</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
