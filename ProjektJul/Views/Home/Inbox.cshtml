@model IEnumerable<Projekt.Data.Models.Message>

@{
    ViewData["Title"] = "Inbox";
}

<h2>Inbox</h2>

<table class="table">
    <thead>
        <tr>
            <th>From</th>
            <th>To</th>
            <th>Message</th>
            <th>Sent At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var msg in Model)
        {
            <tr>
                <td>@msg.SenderId</td>
                <td>@msg.ReceiverId</td>
                <td>@msg.Content</td>
                <td>@msg.SentAt.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Create">Send New Message</a>