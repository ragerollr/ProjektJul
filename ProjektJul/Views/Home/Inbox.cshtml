@model IEnumerable<Projekt.Data.Models.Message>

@{
    ViewData["Title"] = "Inbox";
}

<h2>Inbox</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Från</th>
            <th>Meddelande</th>
            <th>Skickat</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var msg in Model)
        {
            <tr>
                <td>@(msg.Sender != null ? msg.Sender.UserName : msg.SenderId)</td>
                <td>@msg.Content</td>
                <td>@msg.SentAt.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="SendMessage">Skicka nytt meddelande</a>