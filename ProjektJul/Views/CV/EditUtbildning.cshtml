@{
}
@model CVSite.Data.Models.Utbildning

<form asp-controller="Cv"
      asp-action="EditUtbildning"
      method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" style="color:red"></div>

    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="SchoolName"></label>
        <input asp-for="SchoolName" />
        <span asp-validation-for="SchoolName"></span>
    </div>

    <div>
        <label asp-for="Degree"></label>
        <input asp-for="Degree" />
        <span asp-validation-for="Degree"></span>
    </div>

    <div>
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" />
        <span asp-validation-for="StartDate"></span>
    </div>

    <div>
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" />
        <span asp-validation-for="EndDate"></span>
    </div>

    <button type="submit">Spara</button>
</form>
