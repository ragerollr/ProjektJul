@model CVSite.Data.Models.Erfarenhet

<form asp-controller="Cv"
      asp-action="EditErfarenhet"
      method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" style="color:red"></div>

    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="CompanyName"></label>
        <input asp-for="CompanyName" />
        <span asp-validation-for="CompanyName"></span>
    </div>

    <div>
        <label asp-for="Position"></label>
        <input asp-for="Position" />
        <span asp-validation-for="Position"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" />
        <span asp-validation-for="StartDate"></span>
    </div>

    <div>
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" />
        <span asp-validation-for="EndDate"></span>
    </div>

    <button type="submit">Spara</button>
</form>
