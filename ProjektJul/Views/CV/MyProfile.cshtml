@model Projekt.Web.ViewModels.CvViewModel

<div class="container">

<div class="text-center mb-4">
    <img src="@Model.ProfileImageUrl"
         class="rounded-circle mb-2"
         width="150" />

    <h1 class="mb-0">@Model.FullName</h1>
</div>



    <div class="card p-3 mb-4">
        <ul class="list-unstyled mb-0">
            <li>
                <strong>Email:</strong> @Model.Email
            </li>
            <li>
                <strong>Adress:</strong> @Model.Address
            </li>
            <li>
                <strong>Status:</strong>
                <span class="badge @(Model.IsPublic ? "bg-success" : "bg-secondary")">
                    @(Model.IsPublic ? "Public profil" : "Privat profil")
                </span>
            </li>
        </ul>
    </div>


    <div class="card p-3 mb-4">
        <h3 class="mb-3">Utbildning</h3>

        @if (Model.Utbildningar != null && Model.Utbildningar.Any())
        {
            <ul class="list-unstyled mb-0">
                @foreach (var utbildning in Model.Utbildningar)
                {
                    <li class="mb-3">
                        <strong>@utbildning.SchoolName</strong><br />
                        <span class="text-muted">
                            @utbildning.Degree<br />
                            @utbildning.StartDate.Year –
                            @(utbildning.EndDate?.Year.ToString() ?? "Pågående")
                        </span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="mb-0">Ingen utbildning tillagd ännu.</p>
        }
    </div>

    <div class="card p-3 mb-4">
        <h3 class="mb-3">Erfarenhet</h3>

        @if (Model.Erfarenheter != null && Model.Erfarenheter.Any())
        {
            <ul class="list-unstyled mb-0">
                @foreach (var e in Model.Erfarenheter)
                {
                    <li class="mb-3">
                        <strong>@e.Position</strong> – @e.CompanyName<br />

                        <span class="text-muted">
                            @e.StartDate.ToString("yyyy-MM") –
                            @(e.EndDate.HasValue
                                                ? e.EndDate.Value.ToString("yyyy-MM")
                                                : "Pågående")
                </span>

                @if (!string.IsNullOrWhiteSpace(e.Description))
                        {
                            <div class="mt-1">
                                @e.Description
                            </div>
                        }
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="mb-0">Inga erfarenheter tillagda än.</p>
        }
    </div>

    <div class="card p-3 mb-4">
        <h3 class="mb-3">Kompetenser</h3>

        @if (Model.Skills != null && Model.Skills.Any())
        {
            <ul class="list-unstyled mb-0">
                @foreach (var s in Model.Skills)
                {
                    <li class="mb-2 d-flex justify-content-between align-items-center">
                        <strong>@s.Name</strong>

                        <span class="badge bg-primary">
                            Nivå @s.Level / 5
                        </span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="mb-0">Inga kompetenser tillagda.</p>
        }
    </div>


<h3>Projekt</h3>
@if (Model.Projects != null && Model.Projects.Any())
{
    <ul>
        @foreach (var project in Model.Projects)
        {
            <li>@project</li>
        }
    </ul>
}
else
{
    <p>Inga projekt att visa.</p>
}

<hr />

@if (TempData["MessageError"] != null)
{
    <div class="alert alert-danger">@TempData["MessageError"]</div>
}
@if (TempData["MessageSuccess"] != null)
{
    <div class="alert alert-success">@TempData["MessageSuccess"]</div>
}

<h3>Skicka meddelande</h3>

<form asp-controller="Messages" asp-action="Send" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="ToUserId" value="@Model.UserId" />

    @if (!(User.Identity?.IsAuthenticated ?? false))
    {
        <div class="mb-3">
            <label class="form-label">Ditt namn</label>
            <input class="form-control" name="FromName" />
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Meddelande</label>
        <textarea class="form-control" name="Body" rows="4"></textarea>
    </div>

    <div class="mb-3">
        @* Edit ska bara vara för inloggade (annars kan vem som helst försöka edit:a) *@
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a asp-action="Edit" class="btn btn-primary">
                Edit profile
            </a>
        }
    </div>

    <button type="submit" class="btn btn-primary">Skicka</button>
</form>
</div>