@model CVSite.Data.Models.Utbildning

<h2>Ta bort utbildning</h2>

<p>
    Är du säker på att du vill ta bort denna utbildning?
</p>

<p>
    <strong>@Model.SchoolName</strong><br />
    @Model.Degree
</p>

<form asp-action="DeleteUtbildningConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />

    <button type="submit">Ja, ta bort</button>
    <a asp-action="Edit">Avbryt</a>
</form>
